{
	"name": "@ylide/sdk",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"version": "0.2.2",
	"description": "Ylide Protocol SDK for cross-chain communication and messaging",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/ylide-io/sdk.git"
	},
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"test": "mocha -r ts-node/register '**/__tests__/*.ts'",
		"dry-run": "ts-node src/__tests__/index.ts",
		"build": "rm -rf ./lib && tsc",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "tslint -p tsconfig.json",
		"prepublishOnly": "npm run lint",
		"preversion": "npm run lint",
		"docgen": "typedoc src/index.ts --name \"Ylide SDK\" --requiredToBeDocumented Class --out docs --plugin typedoc-plugin-coverage --excludeInternal"
	},
	"keywords": [
		"ylide",
		"messaging",
		"communication",
		"blockchain",
		"everscale",
		"ethereum"
	],
	"author": "Danila Simonov",
	"license": "ISC",
	"devDependencies": {
		"@types/brotli": "^1.3.1",
		"@types/chai": "^4.3.1",
		"@types/crypto-js": "^4.1.1",
		"@types/mocha": "^9.1.1",
		"@types/pako": "^2.0.0",
		"@types/sjcl": "^1.0.30",
		"chai": "^4.3.6",
		"mocha": "^10.0.0",
		"prettier": "^2.7.1",
		"ts-node": "^10.8.2",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typedoc": "^0.23.8",
		"typedoc-plugin-coverage": "^2.0.0",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@ylide/smart-buffer": "^0.0.9",
		"datastructures-js": "^12.0.0",
		"eventemitter3": "^4.0.7",
		"js-sha256": "^0.9.0",
		"pako": "^2.0.4",
		"tweetnacl": "^1.0.3"
	}
}
